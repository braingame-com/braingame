{
	"name": "braingame",
	"version": "1.0.0",
	"private": true,
	"packageManager": "pnpm@9.0.0",
	"scripts": {
		"dev": "turbo dev",
		"build": "turbo build",
		"lint": "turbo lint",
		"test": "turbo test",
		"clean": "turbo clean",
		"format": "biome check --fix --vcs-root=.",
		"typecheck": "turbo typecheck",
		"changeset": "changeset",
		"version": "changeset version",
		"release": "turbo build --filter=./packages/* && changeset publish",
		"prepare": "husky",
		"test:coverage": "turbo test -- --coverage",
		"test:watch": "turbo test -- --watch",
		"build:packages": "turbo build --filter=./packages/*",
		"build:apps": "turbo build --filter=./apps/*",
		"dev:packages": "turbo dev --filter=./packages/*",
		"dev:apps": "turbo dev --filter=./apps/*",
		"dev:docs": "turbo dev --filter=@braingame/docs",
		"build:docs": "turbo build --filter=@braingame/docs",
		"lint:fix": "turbo lint -- --fix",
		"format:check": "biome check --vcs-root=.",
		"format:write": "biome format --write .",
		"typecheck:strict": "turbo typecheck -- --strict",
		"analyze": "turbo analyze",
		"security:audit": "pnpm audit --audit-level moderate",
		"deps:update": "pnpm update --recursive",
		"deps:outdated": "pnpm outdated --recursive",
		"workspace:graph": "turbo graph",
		"workspace:prune": "turbo prune",
		"secrets:scan": "secretlint .",
		"secrets:check": "secretlint --no-color .",
		"quality": "turbo lint typecheck test",
		"preflight": "pnpm install",
		"cleanup:branches": "./scripts/cleanup-branches.sh",
		"cleanup:branches:auto": "./scripts/cleanup-branches-auto.sh",
		"cleanup:branches:old": "./scripts/cleanup-branches-auto.sh 30 true",
		"ci": "pnpm install --frozen-lockfile && pnpm secrets:check && pnpm quality && pnpm build",
		"precommit": "lint-staged && pnpm quality",
		"storybook": "storybook dev -p 6006 -c packages/bgui/.storybook",
		"bgui:scaffold": "node scripts/create-bgui-component.js",
		"dev:tools": "node scripts/dev-tools.js",
		"dev:stats": "node scripts/dev-tools.js stats",
		"dev:analyze": "node scripts/dev-tools.js analyze",
		"dev:deps": "node scripts/dev-tools.js deps",
		"dev:coverage": "node scripts/dev-tools.js coverage",
		"dev:unused": "node scripts/dev-tools.js find-unused",
		"workspace": "node scripts/workspace-helper.js",
		"docs": "node scripts/doc-generator.js",
		"validate:env": "turbo validate:env",
		"perf": "pnpm --filter @braingame/product reassure",
		"perf:baseline": "pnpm --filter @braingame/product reassure:baseline",
		"lighthouse": "./scripts/lighthouse-local.sh all",
		"lighthouse:main": "./scripts/lighthouse-local.sh main",
		"lighthouse:docs": "./scripts/lighthouse-local.sh docs",
		"lighthouse:product": "./scripts/lighthouse-local.sh product",
		"lighthouse:ci": "lhci autorun"
	},
	"devDependencies": {
		"@babel/plugin-proposal-class-properties": "^7.18.6",
		"@babel/plugin-transform-class-properties": "^7.27.1",
		"@babel/plugin-transform-flow-strip-types": "^7.27.1",
		"@babel/preset-env": "^7.27.2",
		"@babel/preset-flow": "^7.27.1",
		"@babel/preset-react": "^7.27.1",
		"@babel/preset-typescript": "^7.27.1",
		"@biomejs/biome": "^2.0.4",
		"@changesets/cli": "^2.27.1",
		"@next/bundle-analyzer": "^15.3.4",
		"@secretlint/secretlint-rule-no-dotenv": "^10.1.0",
		"@secretlint/secretlint-rule-preset-recommend": "^10.1.0",
		"@storybook/addon-essentials": "^8.0.0",
		"@storybook/react": "^8.0.0",
		"@storybook/react-vite": "^8.0.0",
		"@testing-library/react": "^16.3.0",
		"@testing-library/user-event": "^14.6.1",
		"@types/glob": "^8.1.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.2",
		"react-native-web": "~0.20.0",
		"secretlint": "^10.1.0",
		"ts-morph": "^26.0.0",
		"turbo": "^2.3.3",
		"typescript": "^5.3.3"
	},
	"engines": {
		"node": ">=18",
		"pnpm": ">=9"
	},
	"lint-staged": {
		"**/*.{ts,tsx,js,jsx}": [
			"biome check --fix --vcs-root=.",
			"biome format --write"
		]
	},
	"pnpm": {
		"overrides": {
			"react": "19.0.0",
			"react-dom": "19.0.0",
			"react-test-renderer": "19.0.0",
			"@types/react": "19.0.14",
			"react-native-web": "0.20.0",
			"strip-ansi": "^7.1.0",
			"string-width": "^5.1.2",
			"wrap-ansi": "^8.1.0",
			"@biomejs/biome": "^2.0.4"
		},
		"packageExtensions": {
			"expo-router": {
				"peerDependencies": {
					"react": "19.0.0",
					"react-dom": "19.0.0"
				}
			}
		},
		"peerDependencyRules": {
			"allowedVersions": {
				"react": "19.0.0",
				"react-dom": "19.0.0"
			}
		}
	},
	"dependencies": {
		"@sentry/nextjs": "^9.30.0",
		"sentry-expo": "^7.2.0"
	}
}
