{
	"name": "braingame",
	"version": "1.0.0",
	"private": true,
	"packageManager": "pnpm@9.0.0",
	"scripts": {
		"dev": "turbo dev",
		"build": "turbo build",
		"lint": "turbo lint",
		"test": "turbo test",
		"clean": "turbo clean",
		"format": "biome check --fix",
		"typecheck": "turbo typecheck",
		"changeset": "changeset",
		"version": "changeset version",
		"release": "turbo build --filter=./packages/* && changeset publish",
		"prepare": "husky",
		"test:coverage": "turbo test -- --coverage",
		"test:watch": "turbo test -- --watch",
		"build:packages": "turbo build --filter=./packages/*",
		"build:apps": "turbo build --filter=./apps/*",
		"dev:packages": "turbo dev --filter=./packages/*",
		"dev:apps": "turbo dev --filter=./apps/*",
		"lint:fix": "turbo lint -- --fix",
		"format:check": "biome check",
		"format:write": "biome format --write .",
		"typecheck:strict": "turbo typecheck -- --strict",
		"analyze": "turbo analyze",
		"security:audit": "pnpm audit --audit-level moderate",
		"deps:update": "pnpm update --recursive",
		"deps:outdated": "pnpm outdated --recursive",
		"workspace:graph": "turbo graph",
		"workspace:prune": "turbo prune",
		"secrets:scan": "secretlint .",
		"secrets:check": "secretlint --no-color .",
		"quality": "turbo lint typecheck test",
		"preflight": "pnpm install",
		"ci": "pnpm install --frozen-lockfile && pnpm secrets:check && pnpm quality && pnpm build",
		"precommit": "lint-staged && pnpm secrets:check && pnpm quality",
		"storybook": "echo 'Storybook is not yet implemented'",
		"bgui:scaffold": "node scripts/create-bgui-component.js"
	},
	"devDependencies": {
		"@babel/plugin-proposal-class-properties": "^7.18.6",
		"@babel/plugin-transform-class-properties": "^7.27.1",
		"@babel/plugin-transform-flow-strip-types": "^7.27.1",
		"@babel/preset-env": "^7.27.2",
		"@babel/preset-flow": "^7.27.1",
		"@babel/preset-react": "^7.27.1",
		"@babel/preset-typescript": "^7.27.1",
		"@biomejs/biome": "^2.0.0",
		"@changesets/cli": "^2.27.1",
		"@secretlint/secretlint-rule-no-dotenv": "^10.1.0",
		"@secretlint/secretlint-rule-preset-recommend": "^10.1.0",
		"@testing-library/react": "^16.3.0",
		"@testing-library/user-event": "^14.6.1",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.2",
		"react-native-web": "~0.20.0",
		"secretlint": "^10.1.0",
		"ts-morph": "^26.0.0",
		"turbo": "^2.3.3",
		"typescript": "^5.3.3"
	},
	"engines": {
		"node": ">=18",
		"pnpm": ">=9"
	},
	"lint-staged": {
		"**/*.{ts,tsx,js,jsx}": [
			"biome check --fix",
			"biome format --write"
		]
	}
}
