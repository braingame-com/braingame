{
	"hosting": [
		{
			"target": "www",
			"public": "apps/website",
			"ignore": ["firebase.json", "**/.*"]
		},
		{
			"target": "app",
			"public": "apps/product",
			"ignore": ["firebase.json", "**/.*"]
		},
		{
			"target": "api",
			"public": "apps/api/dist",
			"ignore": ["firebase.json", "**/.*"],
			"rewrites": [
				{
					"source": "**",
					"function": "api"
				}
			]
		}
	],
	"functions": {
		"source": "apps/api",
		"runtime": "nodejs18"
	}
}
