{
  "hosting": [
    {
      "site": "www",
      "public": "apps/main-site/out",
      "ignore": [
        "firebase.json",
        "**/.*"
      ]
    },
    {
      "site": "app",
      "public": "apps/product",
      "ignore": [
        "firebase.json",
        "**/.*"
      ]
    },
    {
      "site": "braingame-prod-docs",
      "public": "apps/docs-site/out",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ]
    },
    {
      "site": "braingame-prod-api",
      "public": "apps/api/public",
      "rewrites": [
        {
          "source": "/",
          "destination": "/index.html"
        },
        {
          "source": "**",
          "function": "api"
        }
      ]
    }
  ],
  "functions": {
    "source": "apps/api",
    "runtime": "nodejs20"
  },
  "firestore": {
    "rules": "firestore.rules"
  },
  "emulators": {
    "hosting": {
      "port": 9100,
      "sites": {
        "www": 9102,
        "docs": 9103,
        "app": 9104,
        "braingame-prod-api": 9105
      }
    },
    "functions": {
      "port": 5001
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true,
    "firestore": {
      "port": 8080
    }
  }
}
