{
	"name": "@braingame/config",
	"version": "1.0.0",
	"description": "Brain Game shared configuration - ESLint, TypeScript, Biome presets, and theme system",
	"main": "src/index.ts",
	"types": "src/index.ts",
	"scripts": {
		"dev": "echo 'Config package ready'",
		"build": "tsc",
		"lint": "biome check --fix --vcs-root=../..",
		"typecheck": "tsc --noEmit",
		"test": "echo 'No tests for config'",
		"clean": "rm -rf dist"
	},
	"files": [
		"*.json",
		"*.js",
		"*.ts",
		"src/**/*",
		"dist/**/*"
	],
	"publishConfig": {
		"access": "public"
	}
}
