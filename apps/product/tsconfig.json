{
	"extends": "../../packages/config/tsconfig.base.json",
	"compilerOptions": {
		"baseUrl": ".",
		"composite": true,
		"outDir": "./dist",
		"declaration": true,
		"declarationMap": true,
		"emitDeclarationOnly": false,
		"paths": {
			"@/*": ["./*"],
			"@braingame/bgui": ["../../packages/bgui/dist"],
			"@braingame/bgui/*": ["../../packages/bgui/dist/*"],
			"@braingame/utils": ["../../packages/utils/dist"],
			"@braingame/utils/*": ["../../packages/utils/dist/*"]
		}
	},
	"include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"],
	"exclude": ["node_modules", "dist"]
}
