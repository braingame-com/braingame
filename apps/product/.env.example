# =============================================================================
# BRAIN GAME PRODUCT APP - ENTERPRISE CONFIGURATION TEMPLATE
# =============================================================================
# Copy this file to .env.local and configure your environment variables
# This template follows Fortune 500 security and configuration standards

# -----------------------------------------------------------------------------
# APP CONFIGURATION
# -----------------------------------------------------------------------------
APP_NAME=Brain Game
APP_VERSION=1.0.0
NODE_ENV=development

# -----------------------------------------------------------------------------
# API CONFIGURATION
# -----------------------------------------------------------------------------
API_BASE_URL=https://api.braingame.com
API_TIMEOUT=30000
API_RETRY_ATTEMPTS=3

# -----------------------------------------------------------------------------
# AUTHENTICATION & SECURITY
# -----------------------------------------------------------------------------
JWT_SECRET=your-super-secure-jwt-secret-here
SESSION_TIMEOUT=3600000
ENCRYPTION_KEY=your-32-character-encryption-key

# -----------------------------------------------------------------------------
# THIRD-PARTY SERVICES
# -----------------------------------------------------------------------------
ANALYTICS_KEY=your-analytics-key-here
SENTRY_DSN=your-sentry-dsn-here
AMPLITUDE_API_KEY=your-amplitude-key-here

# -----------------------------------------------------------------------------
# FEATURE FLAGS
# -----------------------------------------------------------------------------
ENABLE_ANALYTICS=true
ENABLE_ERROR_REPORTING=true
ENABLE_DEBUG_MODE=false

# -----------------------------------------------------------------------------
# DEVELOPMENT TOOLS
# -----------------------------------------------------------------------------
FLIPPER_ENABLED=true
REACTOTRON_ENABLED=true
DEV_MENU_ENABLED=true

# -----------------------------------------------------------------------------
# PERFORMANCE MONITORING
# -----------------------------------------------------------------------------
ENABLE_PERFORMANCE_MONITORING=true
BUNDLE_ANALYZER_ENABLED=false

# Note: Never commit actual secrets to version control
# Use secure secret management for production environments
