# ============================================================================
# BRAIN GAME WEBSITE - ENVIRONMENT CONFIGURATION TEMPLATE
# ============================================================================
# Copy this file to .env.local and configure your environment variables

# ---------------------------------------------------------------------------
# APP CONFIGURATION
# ---------------------------------------------------------------------------
NEXT_PUBLIC_APP_NAME=Brain Game Web
# NEXT_PUBLIC_APP_VERSION is now automatically read from package.json

# ---------------------------------------------------------------------------
# API
# ---------------------------------------------------------------------------
NEXT_PUBLIC_API_BASE_URL=https://api.braingame.com
NEXT_PUBLIC_API_TIMEOUT=30000

# ---------------------------------------------------------------------------
# ANALYTICS & MONITORING
# ---------------------------------------------------------------------------
NEXT_PUBLIC_ANALYTICS_KEY=your-analytics-key-here
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn-here

# ---------------------------------------------------------------------------
# FIREBASE CONFIGURATION
# ---------------------------------------------------------------------------
# Get these values from your Firebase project console
NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# ---------------------------------------------------------------------------
# FEATURE FLAGS
# ---------------------------------------------------------------------------
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=true
